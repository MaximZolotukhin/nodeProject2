{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server (ESM + TS)",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["--import", "ts-node/register"],
      "args": ["${workspaceFolder}/src/main.ts"],
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
